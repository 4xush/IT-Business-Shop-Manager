<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="gui.controllers.RepairController" prefWidth="900" prefHeight="600">
    <VBox spacing="10" alignment="CENTER" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
        <Label text="Repair Management" style="-fx-font-size: 24px;" alignment="CENTER"/>
        <TableView fx:id="repairTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colCustomerName" text="Customer Name" prefWidth="150"/>
                <TableColumn fx:id="colPhoneNumber" text="Phone Number" prefWidth="120"/>
                <TableColumn fx:id="colDeviceModel" text="Device Model" prefWidth="150"/>
                <TableColumn fx:id="colIssueDescription" text="Issue Description" prefWidth="200"/>
                <TableColumn fx:id="colEstimatedCost" text="Estimated Cost" prefWidth="100"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                <TableColumn fx:id="colCreatedAt" text="Created At" prefWidth="150"/>
            </columns>
        </TableView>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Add Repair" onAction="#addRepair"/>
            <Button fx:id="updateButton" text="Update Status" onAction="#updateRepair"/>
            <Button fx:id="deleteButton" text="Delete Repair" onAction="#deleteRepair"/>
        </HBox>
    </VBox>
</AnchorPane>