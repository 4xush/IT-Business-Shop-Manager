<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="gui.controllers.RepairFormController" prefWidth="400" prefHeight="400">
    <VBox spacing="15" alignment="CENTER" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20">
        <Label text="Repair Details" style="-fx-font-size: 20px;" alignment="CENTER"/>
        <TextField fx:id="customerNameField" promptText="Customer Name" maxWidth="300"/>
        <TextField fx:id="phoneNumberField" promptText="Phone Number" maxWidth="300"/>
        <TextField fx:id="deviceModelField" promptText="Device Model" maxWidth="300"/>
        <TextField fx:id="issueDescriptionField" promptText="Issue Description" maxWidth="300"/>
        <TextField fx:id="estimatedCostField" promptText="Estimated Cost" maxWidth="300"/>
        <ComboBox fx:id="statusCombo" promptText="Select Status" maxWidth="300"/>
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="addButton" text="Add" onAction="#addRepair"/>
            <Button fx:id="updateButton" text="Update" onAction="#updateRepair"/>
            <Button text="Cancel" onAction="#cancel"/>
        </HBox>
    </VBox>
</AnchorPane>