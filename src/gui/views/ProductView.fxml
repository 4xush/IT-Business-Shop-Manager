<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="gui.controllers.ProductController">
    <VBox spacing="10" alignment="CENTER">
        <Label text="Product Management" style="-fx-font-size: 24px;"/>
        <TableView fx:id="productTable">
            <columns>
                <TableColumn text="ID" fx:id="colId"/>
                <TableColumn text="Name" fx:id="colName"/>
                <TableColumn text="Price" fx:id="colPrice"/>
                <TableColumn text="Stock" fx:id="colStock"/>
            </columns>
        </TableView>
        <HBox spacing="10">
            <Button text="Add Product" onAction="#addProduct"/>
            <Button text="Update Product" onAction="#updateProduct"/>
            <Button text="Delete Product" onAction="#deleteProduct"/>
        </HBox>
    </VBox>
</AnchorPane>