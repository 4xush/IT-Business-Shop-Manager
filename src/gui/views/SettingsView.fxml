<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="gui.controllers.SettingsController" 
            prefWidth="800" 
            prefHeight="600">
    <VBox spacing="25" 
          alignment="CENTER" 
          AnchorPane.leftAnchor="40" 
          AnchorPane.rightAnchor="40" 
          AnchorPane.topAnchor="40" 
          AnchorPane.bottomAnchor="40">
        <Label text="⚙️ Settings" 
               style="-fx-font-size: 24px; -fx-font-weight: bold;" 
               alignment="CENTER"/>
        <VBox spacing="20" 
              alignment="CENTER">
            <Button fx:id="exportButton" 
                    text="Export Database" 
                    onAction="#exportDatabase" 
                    style="-fx-font-size: 14px; -fx-pref-width: 200; -fx-background-color: #0984e3; -fx-text-fill: white;"/>
            <Button fx:id="loadButton" 
                    text="Load Database" 
                    onAction="#loadDatabase" 
                    style="-fx-font-size: 14px; -fx-pref-width: 200; -fx-background-color: #e17055; -fx-text-fill: white;"/>
            <Button fx:id="backButton" 
                    text="Back to Dashboard" 
                    onAction="#backToDashboard" 
                    style="-fx-font-size: 14px; -fx-pref-width: 200; -fx-background-color: #dfe6e9; -fx-text-fill: #2d3436;"/>
        </VBox>
    </VBox>
</AnchorPane>